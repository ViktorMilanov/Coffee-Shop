@model IEnumerable<Cafe>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Cafe List</h2>
       </div>
       <div class="col-6 text-end ">
           <a asp-controller="Cafe" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Cafe
           </a>
       </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%"
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Count Of Personal
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Address
                </td>
                <td width="30%">
                    @obj.CountOfPersonal 
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Cafe" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Cafe" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>